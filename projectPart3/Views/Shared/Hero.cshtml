<!-- Hero Section Begin -->
@{
    var danhmucs = ViewBag.DanhMuc;
    var tit = ViewBag.Message;
    
}
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh Muc</span>
                    </div>
                    <ul>
                        @foreach (var danhmuc in danhmucs)
                        {
                            <li><a href="/Home/ShowProduct/@danhmuc.ma_danh_muc">@danhmuc.ten_danh_muc</a></li>

                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        @using (Html.BeginForm())
                        {

                        <form action="#">
                            <div class="hero__search__categories">
                                All Products
                                <span class="arrow_carrot-down"></span>
                            </div>
                            @Html.TextBox("SearchString")
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                        }
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>0336378689</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                @if (tit == "Home")
                {
                    <div class="hero__item set-bg" data-setbg="Content/img/hero/banner.jpg" style="background-image: url(&quot;img/hero/banner.jpg&quot;); margin-top: 20px;">
                        <div class="hero__text">
                            <span>FRUIT FRESH</span>
                            <h2>Vegetable <br>100% Organic</h2>
                            <p>Free Pickup and Delivery Available</p>
                            <a href="#" class="primary-btn">SHOP NOW</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
