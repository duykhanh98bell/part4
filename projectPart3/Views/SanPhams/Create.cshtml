                    @Html.DropDownList("ma_ncc", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ma_ncc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
