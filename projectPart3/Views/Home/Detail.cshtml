
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutClientShop.cshtml";
    var product = ViewBag.sanphams;
}



    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                 src="@product.hinh_anh" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    @using (Html.BeginForm("updateDetailCart", "Cart"))
                    {
                    <div class="product__details__text">
                        <h3>@product.ten_sp</h3>
                        <div class="product__details__price">@product.gias.gia_khuyen_mai đ</div>
                        <p>
                            @product.mo_ta
                        </p>
                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="">
                                    <input type="hidden" value="@product.ma_sp" name="id_product">
                                    <input type="number" value="1" name="quantity" min="1">
                                </div>
                            </div>
                        </div>
                        @if (product.trang_thai == true)
                        {
                            <input type="submit" class="primary-btn" name="name" value="ADD TO CARD" />
                        }
                        else
                        {
                            <p class="primary-btn">ADD TO CARD</p>
                        }
                        <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                        <ul>
                            <li><b>Trang thai</b> <span>@(product.trang_thai ? "Còn hàng" : "Hết Hàng")</span></li>
                        </ul>
                    </div>
                    }
